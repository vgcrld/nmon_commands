#!/usr/bin/env ruby

require 'nmon_commands'
require 'sinatra'

BIN = File.dirname(__FILE__)
HOME = File.dirname(BIN)
VIEWS = File.join(HOME, "templates")

set :port, 10888
set :bind, 0
set :run, true
set :views, VIEWS

get '/view/:customer/:uuid' do
  haml :view
end

get '/doc' do
  haml :doc
end



